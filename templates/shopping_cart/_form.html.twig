<div class="container">
    {{ form_start(form , {'attr':{'novalidate':'novalidate'}}) }}
    <div class="form-group">
        {{ form_label(form.price," Please Enter The name of product")  }}
        {{ form_widget(form.price , {'attr':{'class':'form-control'} }) }}
        {% if form_errors(form.price) is not empty %}
            <div class="alert alert-danger">
                {{ form_errors(form.price) }}
            </div>
        {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.quantity," Please Enter The Description")  }}
        {{ form_widget(form.quantity , {'attr':{'class':'form-control'} }) }}
        {% if form_errors(form.quantity) is not empty %}
            <div class="alert alert-danger">
                {{ form_errors(form.quantity) }}
            </div>
        {% endif %}
    </div>




</div>



<div class="form-group">
    {{ form_label(form.idProduct,"Please Choose The image you wanna add")  }}
    {{ form_widget(form.idProduct , {'attr':{'class':'form-control'} }) }}

    {{ form_errors(form.idProduct) }}

</div>

</div>

<div class="form-group">
    {{ form_label(form.user,"the status is")  }}
    {{ form_widget(form.user , {'attr':{'class':'form-control'} }) }}

    {{ form_errors(form.user) }}

</div>
<button class="btn btn-primary text-white py-3 px-4">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
</div>